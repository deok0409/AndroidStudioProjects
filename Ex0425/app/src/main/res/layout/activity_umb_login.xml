<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101D6A"
    tools:context=".umb_loginActivity">

    <ImageView
        android:id="@+id/imgUmb1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/umb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/tvTitle_text"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgUmb1"
        app:layout_constraintEnd_toEndOf="@+id/imgUmb1"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imgUmb1" />

    <EditText
        android:id="@+id/edtUmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFDFD"
        android:ems="10"
        android:hint="@string/edtUmId_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imgUmb1"
        app:layout_constraintStart_toStartOf="@+id/imgUmb1"
        app:layout_constraintTop_toBottomOf="@+id/imgUmb1" />

    <EditText
        android:id="@+id/editUmPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edtUmPw_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtUmId"
        app:layout_constraintStart_toStartOf="@+id/edtUmId"
        app:layout_constraintTop_toBottomOf="@+id/edtUmId" />

    <Button
        android:id="@+id/btnUmJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/btnUmJoin_text"
        app:layout_constraintEnd_toStartOf="@+id/btnUmLogin"
        app:layout_constraintStart_toStartOf="@+id/editUmPw"
        tools:layout_editor_absoluteY="446dp" />

    <Button
        android:id="@+id/btnUmLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUmLogin_text"
        app:layout_constraintEnd_toEndOf="@+id/editUmPw"
        tools:layout_editor_absoluteY="446dp" />
</androidx.constraintlayout.widget.ConstraintLayout>